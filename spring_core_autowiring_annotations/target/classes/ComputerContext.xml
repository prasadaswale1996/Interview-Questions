<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context" xsi:schemaLocation="http://www.springframework.org/schema/beans 
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<context:annotation-config />

	<bean id="Student" class="spring.core.autowiring.annotations.Student">
		<constructor-arg value="Akshay" type="String" />
		<constructor-arg value="10" type="int" />
		<constructor-arg ref="addr" />

	</bean>

	<bean id="addr" class="spring.core.autowiring.annotations.Address">
		<property name="city" value="Pune"></property>
		<property name="pin" value="411048"></property>
	</bean>

	<bean id="addr2" class="spring.core.autowiring.annotations.Address">
		<property name="city" value="Mumbai"></property>
		<property name="pin" value="400055"></property>
	</bean>


</beans>